# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Pages
GET     /                           controllers.Page.index()
GET     /login                     	controllers.Page.login(email:String ?= "")
GET    	/manageProcessModels		controllers.Page.manageProcessModels()
GET    	/addProcessModel			controllers.Page.addProcessModel()
GET    	/processModeler				controllers.Page.processModeler(model:String ?= "")

# Login page
POST    /login                     	controllers.AuthController.login()

# Process Instance Management
POST    /uploadProcess				controllers.ProcessController.uploadProcess()
POST    /startProcess             	controllers.ProcessController.startProcess()
GET     /process/*processID			controllers.ProcessController.xmlProcess(processID)
POST    /setCurrentProcess			controllers.ProcessController.setCurrentProcess()
POST    /performActivity			controllers.ProcessController.performActivity()
POST    /performGatewayAction		controllers.ProcessController.performGatewayAction()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
GET     /webjars/*file             	controllers.WebJarAssets.at(file)

# Map the JS resource paths
GET     /*file                      controllers.Assets.versioned(path="/public", file: Asset)
