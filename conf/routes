# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Page.index()

# Login page
GET     /login                     	controllers.Page.login(email:String ?= "")
POST    /login                     	controllers.AuthController.login()

# Process Instance Management
POST    /uploadProcess				controllers.ProcessController.uploadProcess()
POST    /startProcess             	controllers.ProcessController.startProcess()
GET     /process/*processID			controllers.ProcessController.xmlProcess(processID)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
GET     /webjars/*file             	controllers.WebJarAssets.at(file)
